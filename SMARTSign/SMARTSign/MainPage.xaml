<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:SMARTSign.Models"
             xmlns:tool="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SMARTSign.MainPage">

    <Grid BackgroundColor="#333">
        <Grid.RowDefinitions>
            <!-- Title Row -->
            <RowDefinition Height="90"/>
            <!-- Content Area -->
            <RowDefinition/>
            <!-- Action Area -->
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BackgroundColor="#00333333" Stroke="#80FFFFFF" StrokeThickness="3" VerticalOptions="End" HeightRequest="75">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <Grid Margin="20,10" HorizontalOptions="Fill">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Label Text="SMARTSign Dictionary" Grid.Column="0" VerticalOptions="Center" FontSize="Large" FontAttributes="Bold" Opacity=".8"/>
                <ImageButton Source="hamburger" Grid.Column="1" VerticalOptions="Center" Scale=".75" Opacity=".8"/>
            </Grid>
        </Border>
       
        <CollectionView x:Name="ImageCards" Grid.Row="1" >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ImageCardModel">
                    <Border Stroke="#80FFFFFF" BackgroundColor="#00000000" Margin="10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <WebView HeightRequest="270" HorizontalOptions="Fill" VerticalOptions="Fill">
                            <WebView.Source>
                                <HtmlWebViewSource>
                                    <HtmlWebViewSource.Html>
                                        <![CDATA[
                                        <HTML>
                                            <BODY style="background-color:gray;">
                                                <iframe width="375" height="250" type “align=center”
                                                    src="https://www.youtube.com/embed/iXZIuL6PmY0?&autoplay=1"frameborder="0"
                                                    allowfullscreen></iframe>
                                            </BODY>
                                        </HTML>
                                        ]]>
                                    </HtmlWebViewSource.Html>
                                </HtmlWebViewSource>
                            </WebView.Source>
                        </WebView>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Grid.Row="2" BackgroundColor="#00333333" Stroke="#80FFFFFF" VerticalOptions="Start" HeightRequest="75" StrokeThickness="3">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <Grid Margin="20,10" HorizontalOptions="Fill">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Entry/>
                <ImageButton Source="arrow" Grid.Column="1" VerticalOptions="Center" Scale=".5" Opacity=".8"/>
            </Grid>
        </Border>








    </Grid>
</ContentPage>
